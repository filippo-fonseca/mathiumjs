{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "target": "ES2015",
    "module": "commonjs",
    "noImplicitAny": false,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "types",
    "strict": true,
    "strictNullChecks": true,
    "lib": ["esnext"],
    "esModuleInterop": true
  },
  "include": ["./types"],
  "exclude": ["node_modules"]
}
